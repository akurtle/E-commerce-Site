// tsconfig.json
{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["dom", "esnext"]
  },
  "include": [
    "./node_modules/@sanity/base/types/**/*.ts",
    "./**/*"
  ],
  "exclude": ["node_modules", "dist", ".next", "build"]
}
